<div class="form-div">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="container">
        <div class="item-container">
            <h2 class="log-in">Редактирование профиля</h2>
        </div>
        <form>
            <div class="form-input">
                <label for="email" class="label">Email</label>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "text" %>
            </div>
            <div class="form-input">
                <label for="password" class="label">Пароль(Оставте пустым если не хотите менять)</label>
                <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
            <div class="form-input">
                <label for="password" class="label">Подтвердите пароль</label>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
            <div class="form-input">
                <label for="password" class="label">Номер телефона</label>
                <%= f.text_field :phone_number, autocomplete: "new-password" %>
            </div>
            <div class="form-input">
                <label for="password" class="label">Ваше имя</label>
                <%= f.text_field :name, autocomplete: "new-password" %>
             <label for="password" class="label">Что бы применить изменения введите текущий пароль</label><br>
              <%= f.password_field :current_password, autocomplete: "current-password" %>
            </div>
            <div>
                <%= f.submit "Применить", type: "submit", class: "submit-button" %>
            </div>
            <div class="display-space-between">
                </div>
                  <p>Удалить ваш профиль? <%= button_to "Удалить мой аккаунт", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "submit-button-red" %></p>
                <div>
            </div>
        </form>
    </div>
<% end %>
</div>


<div class="form-div">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="container">
        <div class="item-container">
            <h2 class="log-in">Регистрация</h2>
        </div>
            <div class="form-input">
                <label for="email" class="label">Email</label>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "text" %>
            </div>
            <div class="form-input">
                <label for="password" class="label">Пароль</label>
                <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
            <div class="form-input">
                <label for="password" class="label">Подтвердите пароль</label>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
            <div class="form-input">
                <label for="password" class="label">Номер телефона</label>
                <label class="label">Формат: 10 цифр без кода страны</label>
                <%= f.text_field :phone_number, autocomplete: "new-password" %>
            </div>
            <div class="form-input">
                <label for="password" class="label">Ваше имя</label>
                <%= f.text_field :name, autocomplete: "new-password" %>
            </div>
            <div class="display-space-between">
                <div>
                    <a href="/users/sign_in">Войти</a>
                </div>
            </div>
            <div>
                <%= f.submit "Зарегистрироваться", type: "submit", class: "submit-button" %>
            </div>
            <div>
            <% if devise_error_messages! != '' %>
              <% devise_error_messages!.each do |error| %>
                <label class="label"><%= error %></label> <br>
              <% end %>
            <% end %>  
            </div>
    </div>
<% end %>
</div>

<script>
 document.querySelectorAll('form').forEach(function (el) {
    el.dataset.turbo = false
  })
</script>
